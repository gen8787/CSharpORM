@model Chef

<div class="container text-center">
    <h3>Add a new Chef!</h3>
    <a asp-action="Index">Home</a>
    <hr>
    <div class="form border border-primary p-1 shadow-lg p-3 mb-5 rounded">
    <form asp-action="CreateChef" asp-controller="Home" method="POST">
        <div class="form-group">
            <label for="FirstName">First Name: </label>
            <input class=”form-control” asp-for="FirstName">
            <small id="errors" class="form-text text-danger"><span asp-validation-for="FirstName"></span></small>
        </div>
        <div class="form-group">
            <label for="LastName">Last Name: </label>
            <input class=”form-control” asp-for="LastName">
            <small id="errors" class="form-text text-danger"><span asp-validation-for="LastName"></span></small>
        </div>
        <div class="form-group">
            <label for="DOB">Date of Birth: </label>
            <input class=”form-control” asp-for="DOB">
            <small id="errors" class="form-text text-danger"><span asp-validation-for="DOB"></span></small>
        </div>
        <button class="btn btn-primary" type="submit">Add Chef</button>
    </form>
    </div>
</div>