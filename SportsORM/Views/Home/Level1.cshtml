@model Player

<style>li{color:red}</style>
<div class="card">
    <div class="card-header bg-dark text-light">Level 1</div>
    <div class="card-body">
        <p>Using the SportsORM, complete all the following queries and show their results on Level1.cshtml.</p>
        <ol>
@* 1 *@
            <li>...all womens' leagues</li>
            <table class="table table-striped">
                <tr>
                    <th>League Name</th>
                    <th>League Sport</th>
                </tr>
                @foreach(var l in ViewBag.WomenLeagues)
                {
                    <tr>
                        <td>@l.Name</td>
                        <td>@l.Sport</td>
                    </tr>
                }
            </table>
@* 2 *@
            <li>...all leagues where sport is any type of hockey</li>
            <table class="table table-striped">
                <tr>
                    <th>League Name</th>
                    <th>League Sport</th>
                </tr>
                @foreach(var l in ViewBag.AllHockey)
                {
                    <tr>
                        <td>@l.Name</td>
                        <td>@l.Sport</td>
                    </tr>
                }
            </table>
@* 3 *@
            <li>...all leagues where sport is something OTHER THAN football</li>
            <table class="table table-striped">
                <tr>
                    <th>League Name</th>
                    <th>League Sport</th>
                </tr>
                @foreach(var l in ViewBag.NoFootball)
                {
                    <tr>
                        <td>@l.Name</td>
                        <td>@l.Sport</td>
                    </tr>
                }
            </table>
@* 4 *@
            <li>...all leagues that call themselves "conferences"</li>
            <table class="table table-striped">
                <tr>
                    <th>League Name</th>
                    <th>League Sport</th>
                </tr>
                @foreach(var l in ViewBag.AllConf)
                {
                    <tr>
                        <td>@l.Name</td>
                        <td>@l.Sport</td>
                    </tr>
                }
            </table>
@* 5 *@
            <li>...all leagues in the Atlantic region</li>
            <table class="table table-striped">
                <tr>
                    <th>League Name</th>
                    <th>League Sport</th>
                </tr>
                @foreach(var l in ViewBag.AllAtlantic)
                {
                    <tr>
                        <td>@l.Name</td>
                        <td>@l.Sport</td>
                    </tr>
                }
            </table>
@* 6 *@
            <li>...all teams based in Dallas</li>
            <table class="table table-striped">
                <tr>
                    <th>Location</th>
                    <th>Team Name</th>
                </tr>
                @foreach(var Loc in ViewBag.AllDallas)
                {
                    <tr>
                        <td>@Loc.Location</td>
                        <td>@Loc.TeamName</td>
                    </tr>
                }
            </table>
@* 7 *@
            <li>...all teams named the Raptors</li>
            <table class="table table-striped">
                <tr>
                    <th>Location</th>
                    <th>Team Name</th>
                </tr>
                @foreach(var Loc in ViewBag.AllRaptors)
                {
                    <tr>
                        <td>@Loc.Location</td>
                        <td>@Loc.TeamName</td>
                    </tr>
                }
            </table>
@* 8 *@
            <li>...all teams whose location includes "City"</li>
            <table class="table table-striped">
                <tr>
                    <th>Location</th>
                    <th>Team Name</th>
                </tr>
                @foreach(var Loc in ViewBag.AllCity)
                {
                    <tr>
                        <td>@Loc.Location</td>
                        <td>@Loc.TeamName</td>
                    </tr>
                }
            </table>
@* 9 *@
            <li>...all teams whose names begin with "T"</li>
            <table class="table table-striped">
                <tr>
                    <th>Location</th>
                    <th>Team Name</th>
                </tr>
                @foreach(var Loc in ViewBag.AllT)
                {
                    <tr>
                        <td>@Loc.Location</td>
                        <td>@Loc.TeamName</td>
                    </tr>
                }
            </table>
@* 10 *@
            <li>...all teams, ordered alphabetically by location</li>
            <table class="table table-striped">
                <tr>
                    <th>Location</th>
                    <th>Team Name</th>
                </tr>
                @foreach(var Loc in ViewBag.AllTeamsByLoc)
                {
                    <tr>
                        <td>@Loc.Location</td>
                        <td>@Loc.TeamName</td>
                    </tr>
                }
            </table>
@* 11 *@
            <li>...all teams, ordered by team name in reverse alphabetical order</li>
            <table class="table table-striped">
                <tr>
                    <th>Location</th>
                    <th>Team Name</th>
                </tr>
                @foreach(var Loc in ViewBag.AllTeamsRev)
                {
                    <tr>
                        <td>@Loc.Location</td>
                        <td>@Loc.TeamName</td>
                    </tr>
                }
            </table>
@* 12 *@
            <li>...every player with last name "Cooper"</li>
            <table class="table table-striped">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
                @foreach(var Loc in ViewBag.AllCooper)
                {
                    <tr>
                        <td>@Loc.FirstName</td>
                        <td>@Loc.LastName</td>
                    </tr>
                }
            </table>
@* 13 *@
            <li>...every player with first name "Joshua"</li>
            <table class="table table-striped">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
                @foreach(var Loc in ViewBag.AllJoshua)
                {
                    <tr>
                        <td>@Loc.FirstName</td>
                        <td>@Loc.LastName</td>
                    </tr>
                }
            </table>
@* 14 *@
            <li>...every player with last name "Cooper" EXCEPT those with "Joshua" as the first name</li>
            <table class="table table-striped">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
                @foreach(var Loc in ViewBag.AllCoopNoJosh)
                {
                    <tr>
                        <td>@Loc.FirstName</td>
                        <td>@Loc.LastName</td>
                    </tr>
                }
            </table>
@* 15 *@
            <li>...all players with first name "Alexander" OR first name "Wyatt"</li>
            <table class="table table-striped">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
                @foreach(var Loc in ViewBag.AllWyAl)
                {
                    <tr>
                        <td>@Loc.FirstName</td>
                        <td>@Loc.LastName</td>
                    </tr>
                }
            </table>
        </ol>
    </div>
</div>