@model Wedding

    <a asp-action="Dashboard">Dashboard</a>

<div class="container">
    <h3>@Model.WedderOne & @Model.WedderTwo's Wedding</h3>
    <p>@Model.Date.ToString("MMM dd, yyyy")</p>
    <hr>
    <h4>Guests:</h4>
    @foreach (User u in ViewBag.usersRsvp)
    {
        <p>@u.FirstName @u.LastName</p>
    }

    <form asp-action="Rsvp" asp-controller="Home" asp-route-WeddingId="@Model.WeddingId" method="post" class="d-inline-flex mr-5">
        <button class="btn btn-link" type="submit">RSVP</button>
    </form>

    <form asp-action="UnRsvp" asp-controller="Home" asp-route-WeddingId="@Model.WeddingId" method="post" class="d-inline-flex mr-5">
        <button class="btn btn-link" type="submit">Un-RSVP</button>
    </form>

    <form asp-action="Delete" asp-controller="Home" asp-route-WeddingId="@Model.WeddingId" method="post" class="d-inline-flex mr-5">
        <button class="btn btn-link" type="submit">Delete</button>
    </form>
</div>