@model LoginUser

<div class="form border border-primary p-1 shadow-lg p-3 mb-5 rounded diplay-inline-flex">
    <h3 class="text-center">Login</h3>
    <hr class="border-primary" />
    <form asp-action="ProcessLogin" asp-controller="Home" method="POST">
    <div class="form-group">
        <label for="LoginEmail">Email: </label>
        <input class="form-control" asp-for="LoginEmail" value="santa@@clause.com">
        <small id="errors" class="form-text text-danger"><span asp-validation-for="LoginEmail"></span></small>
    </div>
    <div class="form-group">
        <label for="LoginPassword">Password: </label>
        <input class="form-control" asp-for="LoginPassword" value="password">
        <small id="errors" class="form-text text-danger"><span asp-validation-for="LoginPassword"></span></small>
    </div>
        <button class="btn btn-primary" type="submit">Login</button>
    </form>
</div>