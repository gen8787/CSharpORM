@model Product

<div class="container text-center">
    <div class="text-center d-inline-flex mb-5">
        <h3>Products</h3>
        <h3 class="mx-3">|</h3>
        <h3><a asp-action="AllCategories">Categories</a></h3>
    </div>
    <hr>
    <div class="form border border-primary p-1 shadow-lg p-3 mb-5 rounded">
    <form asp-action="CreateProduct" asp-controller="Home" method="POST">
        <div class="form-group">
            <label for="Name">Product Name: </label>
            <input class=”form-control” asp-for="Name">
            <small id="errors" class="form-text text-danger"><span asp-validation-for="Name"></span></small>
        </div>
        <div class="form-group">
            <label for="Description">Description: </label>
            <input class=”form-control” asp-for="Description">
            <small id="errors" class="form-text text-danger"><span asp-validation-for="Description"></span></small>
        </div>
        <div class="form-group">
            <label for="Price">Price: </label>
            <input class=”form-control” asp-for="Price">
            <small id="errors" class="form-text text-danger"><span asp-validation-for="Price"></span></small>
        </div>
        <button class="btn btn-primary" type="submit">Add</button>
    </form>
    </div>
    @foreach (Product prod in ViewBag.AllProducts)
    {
        <p>
        <a asp-action="ViewProduct" asp-route-prodId="@prod.ProductId">@prod.Name</a>
        </p>
    }
</div>