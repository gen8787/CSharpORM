@model Dish

<a asp-action="Index">Home</a>
<div class="container text-center">
    <h3>@Model.Name</h3>
    <small>By @Model.Chef</small>
    <hr>
    <p>@Model.Description</p>
    <h5>Calories: @Model.Calories</h5>
    <h5 class="mb-5">Tastiness: @Model.Tastiness</h5>
    <form asp-action="Delete" asp-controller="Home" asp-route-dishId="@Model.DishId" method="post" class="d-inline-flex mr-5">
        <button class="btn btn-danger shadow-lg" type="submit">Delete</button>
    </form>

    <form asp-action="Edit" asp-controller="Home" asp-route-dishId="@Model.DishId" method="post" class="d-inline-flex ml-5">
        <button class="btn btn-success shadow-lg" type="submit">Edit</button>
    </form>
</div>