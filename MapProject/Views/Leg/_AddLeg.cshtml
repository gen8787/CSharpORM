@model Leg
<div class="container mt-5">
    <div class="row justify-content-between">
        <div class="col-6">
            <h3 class="ml-3">Add Legs</h3>
                <form class="border border-primary shadow-lg p-3 mb-5 rounded"
                    asp-action="AddLeg"
                    asp-controller="Leg"
                    method="POST">

                <div class="form-group">
                    <label for="Distance">Distance: </label>
                    <input class="form-control" asp-for="Distance">
                    <small id="errors" class="form-text text-danger">
                        <span asp-validation-for="Distance"></span>
                    </small>
                </div>

                <div class="form-group">
                    <label for="Vertical">Vertical: </label>
                    <input class="form-control" asp-for="Vertical">
                    <small id="errors" class="form-text text-danger">
                        <span asp-validation-for="Vertical"></span>
                    </small>
                </div>

                <div class="form-group">
                    <label for="MunterRate">Rate: </label>
                    <input class="form-control" asp-for="MunterRate">
                    <small id="errors" class="form-text text-danger">
                        <span asp-validation-for="MunterRate"></span>
                    </small>
                </div>

                    <button class="btn btn-primary mt-3" type="submit">Add Leg</button>
                </form>
        </div>

        <div class="col-6">
            <h3 class="ml-3">Information</h3>
            <div class="card border border-primary shadow-lg p-3 mb-5 rounded">
                <p>- Distance is in in Miles.</p>
                <p>- Vertical is a positive number in Feet.</p>
                <p>Common Munter Rates:</p>
                <ul>
                    <li>Off trail travel: 2</li>
                    <li>Uphill travel on foot: 4</li>
                    <li>Flat travel on foot: 6</li>
                    <li>Downhill travel on foot: 8</li>
                </ul>
                <p>Formula:</p>
                <p>time = (distance + (elevation / 100)) / rate</p>
            </div>
        </div>
    </div>
</div>