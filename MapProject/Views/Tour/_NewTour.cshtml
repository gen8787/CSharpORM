@model Tour

<div class="container mt-5">
    <div class="row justify-content-between">
        <div class="col-6">
            <h3 class="ml-3 text-primary">Create New Tour Plan</h3>
                <form class="border border-primary bg-light shadow-lg p-3 mb-5 rounded"
                    asp-action="CreateTour"
                    asp-controller="Tour"
                    method="POST">

                <div class="form-group">
                    <label for="TourName">Tour Name: </label>
                    <input class="form-control" asp-for="TourName">
                    <small id="errors" class="form-text text-danger">
                        <span asp-validation-for="TourName"></span>
                    </small>
                </div>

                    <button class="btn btn-primary mt-3" type="submit">Create Tour</button>
                </form>
        </div>