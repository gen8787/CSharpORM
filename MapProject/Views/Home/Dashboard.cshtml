@model List<Tour>

<div class="container">
    <h3 class="text-primary">Tour Plans</h3>
    <div class="row border border-primary bg-light shadow-lg mb-5 rounded">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col-3">Tour Name</th>
                    <th scope="col-2">Total Dist</th>
                    <th scope="col-2">Total Vert</th>
                    <th scope="col-2">Total Est. Time</th>
                    <th scope="col-1">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Tour t in Model)
                {
                <tr>
                    <td><a asp-action="TourDetails" asp-controller="Tour" asp-route-TourId="@t.TourId">@t.TourName</a></td>
                    <td>@t.TotalDist() Miles</td>
                    <td>@t.TotalVert() Feet</td>
                    <td>@t.TotalEstHours() Hours  @t.TotalEstMins() Minutes</td>
                    <td><a class="text-danger" asp-action="DeleteTour" asp-controller="Tour" asp-route-TourId="@t.TourId">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

    @{
        Tour newTour = new Tour();
    }
    <partial name="/Views/Tour/_NewTour.cshtml" model="@newTour"/>