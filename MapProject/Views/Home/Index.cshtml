@model Leg

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h3>Tour Planner</h3>
    <div class="row border border-primary shadow-lg mb-5 rounded">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col-1">Leg</th>
                    <th scope="col-2">Lat</th>
                    <th scope="col-2">Lon</th>
                    <th scope="col-2">Elev (M)</th>
                    <th scope="col-2">Dist (Km)</th>
                    <th scope="col-1">Vert</th>
                    <th scope="col-1">Rate</th>
                    <th scope="col-1">Time</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Start</th>
                    <td>Start Lat</td>
                    <td>Start Lon</td>
                    <td>Start Elev</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>0</td>
                </tr>
                <tr>
                    <th scope="row">1 &rarr; 2</th>
                    <td>Next Lat</td>
                    <td>Next Lon</td>
                    <td>Next Elev</td>
                    <td>Dist</td>
                    <td>Vert</td>
                    <td>Rate</td>
                    <td>Time</td>
                </tr>
                <tr>
                    <th scope="row">2 &rarr; 3</th>
                    <td>End Lat</td>
                    <td>End Lon</td>
                    <td>End Elev</td>
                    <td>Dist</td>
                    <td>Vert</td>
                    <td>Rate</td>
                    <td>Time</td>
                </tr>
                    <th scope="row">3 &rarr; 4</th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                <th colspan="1">Total Time: </th>
                <th colspan="1">Some Time</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<hr>

<div class="container mt-5">
    <div class="row justify-content-between">
        <div class="col-6">
            <h3 class="ml-3">Add Legs</h3>
                <form class="border border-primary shadow-lg p-3 mb-5 rounded" asp-action="AddLeg" asp-controller="Leg" method="POST">
                <div class="form-group">
                    <label for="Distance">Distance: </label>
                    <input class="form-control" asp-for="Distance">
                    <small id="errors" class="form-text text-danger"><span asp-validation-for="Distance"></span></small>
                </div>

                <div class="form-group">
                    <label for="Vertical">Vertical: </label>
                    <input class="form-control" asp-for="Vertical">
                    <small id="errors" class="form-text text-danger"><span asp-validation-for="Vertical"></span></small>
                </div>

                <div class="form-group">
                    <label for="MunterRate">Rate: </label>
                    <input class="form-control" asp-for="MunterRate">
                    <small id="errors" class="form-text text-danger"><span asp-validation-for="MunterRate"></span></small>
                </div>

                    <button class="btn btn-primary" type="submit">Add Leg</button>
                </form>
        </div>
        <div class="col-6">
            <h3 class="ml-3">Information</h3>
            <div class="card border border-primary shadow-lg p-3 mb-5 rounded">
                <p></p>
                <p>- Distance is in in Km.</p>
                <p></p>
                <p>- Vertical is a positive number in Meters.</p>
                <p></p>
                <p>Common Munter Rates:</p>
                <ul>
                    <li>Off trail travel: 2</li>
                    <li>Uphill travel on foot: 4</li>
                    <li>Flat travel on foot: 6</li>
                    <li>Downhill travel on foot: 8</li>
                </ul>
                <p></p>
            </div>
        </div>
    </div>
</div>